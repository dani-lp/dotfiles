# ls aliases
alias ls='lsd -F --sort=extension --color=auto'
alias ll='lsd -l'
alias lsl='lsd -alF'
alias la='lsd -A'
alias lsa='lsd -Al'
alias l='lsd -CF'

# To avoid mistakes
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Git commands (to be revised)
alias gpo='git push origin master'
alias gp='git pull'
alias gs='git status'
alias gd='git diff'
alias gr='git reflog'
alias glf='git ls-files'
alias gc='git clone'

# QoL stuff
alias c='clear'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias sl='sl -e'
alias fucking='sudo'
alias colortest='npx colortest'
alias clnf='clear && neofetch'
alias y='echo Hey $USERNAME, you can stop spamming Y'
alias diskspace='du -S | sort -n -r |more'
alias topdf='libreoffice --headless --invisible --convert-to pdf'
alias toilet='toilet -f mono12 -F metal'
alias bat='batcat'


# Quickly load bashrc
alias gogo='source ~/.bashrc'
